block variables
- var site_name = "siteName"

doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(
        name="viewport"
        content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0"
        )
        meta(
        http-equiv="X-UA-Compatible"
        content="ie=edge"
        )
        title #{title} | #{site_name}

        style.
            .shine {
                background: #000000;
                position: fixed;
                width: 100%;
                height: 100%;
                left: 0;
                right: 0;
                bottom: 0;
                top: 0;
                z-index: 1000;
                opacity: 1;
            }

            .svg-center svg {
                max-width: 95%;
                max-height: 95%;
                -webkit-transform: scale(2);
                transform: scale(2);
                position: absolute;
                top: 0;
                left: 0;
                right: 0;
                bottom: 0;
                margin: auto;
            }

            @media (max-width: 768px) {
                .svg-center svg {
                    -webkit-transform: scale(1.5);
                    transform: scale(1.5);
                }
            }

            .svg-center svg path {
                fill-opacity: 0;
                fill: #C5B9AC;
                stroke: #C5B9AC;
                stroke-width: 0.3;
                stroke-dasharray: 370;
                stroke-dashoffset: 370;
                -webkit-animation: draw 2s infinite linear, drawFill 0.6s infinite linear;
                animation: draw 2s infinite linear, drawFill 0.6s infinite linear;
                -webkit-animation-direction: alternate;
                animation-direction: alternate;
                -webkit-animation-fill-mode: forwards;
                animation-fill-mode: forwards;
            }

            @-webkit-keyframes draw {
                to {
                    stroke-dashoffset: 0;
                    fill-opacity: 1;
                }
            }

            @keyframes draw {
                to {
                    stroke-dashoffset: 0;
                    fill-opacity: 1;
                }
            }

            @-webkit-keyframes drawFill {
                to {
                    fill-opacity: 1;
                }
            }

            @keyframes drawFill {
                to {
                    fill-opacity: 1;
                }
            }


    body#top
        div(class="ccm-page")

            block content


        link(href="css/main.css" rel="stylesheet")
        script(
        src="https://code.jquery.com/jquery-3.2.1.min.js"
        integrity="sha256-hwg4gsxgFZhOsEEamdOYGBf13FyQuiTwlAQgxVSNgt4="
        crossorigin="anonymous")
        script(src="https://ajax.googleapis.com/ajax/libs/webfont/1.6.26/webfont.js")
        script(src="js/main.js" defer)